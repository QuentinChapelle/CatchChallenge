{% extends 'GamerBundle::base.html.twig' %}


{% block body %}
     {% block content %}
    <h1 class="partieH1">Listes des parties</h1>

    <table class="table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Duree</th>
                <th>Lieu</th>
                <th>Texte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partie in parties %}
            <tr>
                <td><a href="{{ path('partie_show', { 'id': partie.id }) }}">{{ partie.id }}</a></td>
                <td>{{ partie.nom }}</td>
                <td>{% if partie.duree %}{{ partie.duree|date('H:i') }}{% endif %}</td>
                <td>{{ partie.lieu }}</td>
                <td>{{ partie.texte }}</td>
                <td>


                            <a href="{{ path('partie_show', { 'id': partie.id }) }}">En savoir +</a>

                        {#<li>
                            <a href="{{ path('partie_edit', { 'id': partie.id }) }}">edit</a>
                        </li>#}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
         <a class="btn btn-default partieBtn" href="{{ path('partie_new') }}">Cr√©er une nouvelle partie</a>
    {% endblock %}
{% endblock %}
